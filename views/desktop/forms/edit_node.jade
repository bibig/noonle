extends ../layout/system
	
block main
	.sheet.sheet-medium
		.sheet-title
			i.icon-home.icon-white
			| 
			a(href='/' + node.id)
				= node.title
		.sheet-container
			h2
				= __i('edit node')
			hr
			- var _entity = { action: '/edit/' + node.id, deleteAction: '/remove/' + node.id, hiddens: [{name: 'id', value: node.id}], title: form.title, content: form.content, format: form.format }
			include _entity