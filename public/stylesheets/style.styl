body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF
  
  
body 
	background-color: #DBE5EB

.huge
	font-size: 72px
	line-height: 1
	

box-shadow()
	-webkit-box-shadow arguments
	-moz-box-shadow arguments
	box-shadow arguments
   

.clear
	clear: both

.paper
	background-color: #fff
	margin-top: 30px
	
	.paper-title
		padding: 10px 20px
		line-height: 1.4
	
	.node-title
		// height: 50px
		// line-height: 50px
		font-size: 32px
		font-weight: bold

	.page-title
		// height: 30px
		// line-height: 30px
		font-size: 16px
		font-weight: bold
	
	.paper-content
		padding: 30px
		min-height: 300px
	
	.paper-catalog
		padding: 20px
		li
			list-style: circle
	
	.paper-foot
		height: 30px
		line-height: 30px
		padding: 0 20px
		.date
			font-size: 10px
		.options
			text-align:right


#design-sidebar
	padding: 10px
	width: 200px
	background: #fff
	position: fixed
	left: 0
	top: 0
	bottom: 0
	
	#designPanel 
		select
			font-size: 12px
			height: 16px
			margin: 2px
		input.url
			font-size: 12px
			margin: 2px
			height: 16px
			width: 80px
	
	
	.saveDesign
		margin-top: 1em
		height: 50px

	.customize
		margin-left: -8px
		select
			font-size: 12px
			height: 16px
			display: inline-block
			padding: 2px 4px
			margin: 2px
		
		input.url
			font-size: 12px
			height: 16px
			width: 60px
			display: inline-block
			padding: 2px 4px
			margin: 2px
		
		
		input.color
			margin: 1px
	
	ul.themes 
		margin-left: -8px
		width: 150px

		li.theme 
			display: block
			list-style: none
			width: 140px
			height: 160px
			margin: 15px auto
			cursor: pointer
			
			.mini-paper 
				padding: 20px	
				.paper-title 
					padding: 2px 4px
					font-size: 10px
					font-weight: bold
					height: 20px
				
				.paper-content 
					padding: 5px
					font-size: 8px
					height: 60px
				
				.paper-foot 
					height: 10px
				
					
		
	
	
	ul.patterns 
		margin-left: -8px
		width: 150px
		
		li.pattern 
			display: block
			list-style: none
			width: 140px
			height: 80px
			margin: 15px auto
			cursor: pointer
		
	
		
	



